{
  "name": "functions",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "engines": {
    "node": "24"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text-summary",
    "test:coverage:html": "jest --coverage --coverageReporters=html",
    "test:coverage:full": "jest --coverage --coverageReporters=text,lcov,html,json",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:coverage:check": "jest --coverage --coverageReporters=text-summary --coverageThreshold.global.branches=30 --coverageThreshold.global.functions=40 --coverageThreshold.global.lines=35 --coverageThreshold.global.statements=35",
    "coverage:report": "node --loader ts-node/esm scripts/generate-coverage-report.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",

    "debug": "node debug lib/index.js",
    "lint": "eslint src/**/*.ts --ext .ts",
    "lint:fix": "eslint src/**/*.ts --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "ci": "../scripts/ci/check.sh",
    "verify": "npm run build && echo '🔍 驗證環境變數...' && node -e \"if(!require('fs').existsSync('.env')){console.error('❌ .env 檔案遺失！'); process.exit(1);}else{console.log('✅ .env 檔案存在');}\"",
    "local-test": "node -e \"require('dotenv').config(); require('./dist/index.js'); console.log('✅ 本地語法檢查通過');\"",
    "analyze": "npm run lint && npm run format:check && npm run build && npm run test:ci && echo '✅ 分析完成 - 準備部署！'",
    "ci:full": "ts-node ../scripts/ci/check.ts",
    "ci:test": "npm run test:ci && npm run test:coverage:check",
    "test:legacy": "ts-node ../scripts/test/legacy-integration.ts",
    "test:all": "npm run test:ci && npm run test:legacy",
    "deploy:staging": "npm run build && firebase deploy --only functions --project stock-health-staging",
    "deploy:production": "npm run build && firebase deploy --only functions --project stock-health-app",
    "health-check": "node -e \"console.log('🔍 健康檢查端點: http://localhost:5001/stock-health-app/us-central1/stockHealthAPI/api/health')\"",
    "dev": "npm run build:watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@line/bot-sdk": "^10.2.0",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.4.0",
    "yahoo-finance2": "^2.13.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^2.1.4",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
