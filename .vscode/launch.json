{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "🚀 本地開發環境",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/dev/start.js",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      }
    },
    {
      "name": "🧪 本地功能測試",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/test/local.js",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false
      }
    },
    {
      "name": "🔥 完整品質檢查 (CI)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/ci/check.js",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false
      }
    },
    {
      "name": "📊 本機 LINE Bot 測試",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/functions/index.js",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false
      }
    }
  ]
}