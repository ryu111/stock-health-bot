{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "🔍 程式碼品質檢查",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/ci/check.ts",
      "cwd": "${workspaceFolder}/scripts",
      "console": "integratedTerminal",
      "runtimeArgs": ["-r", "ts-node/register"],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false
      }
    },
    {
      "name": "🧪 股票查詢功能測試",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/test/start-and-test.ts",
      "cwd": "${workspaceFolder}/scripts",
      "console": "integratedTerminal",
      "runtimeArgs": ["-r", "ts-node/register"],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      }
    },
    {
      "name": "🤖 LINE Bot 除錯",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/functions/dist/index.js",
      "cwd": "${workspaceFolder}/functions",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false
      }
    },
    {
      "name": "📡 API 伺服器測試",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/functions/dist/local-dev.js",
      "cwd": "${workspaceFolder}/functions",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development",
        "PORT": "3000"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      }
    },
    {
      "name": "🚀 部署到生產環境",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/deploy/deploy.ts",
      "cwd": "${workspaceFolder}/scripts",
      "console": "integratedTerminal",
      "runtimeArgs": ["-r", "ts-node/register"],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      }
    }
  ]
}