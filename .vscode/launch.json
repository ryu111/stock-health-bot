{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "🔥 完整品質檢查 (CI)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/ci/check.ts",
      "cwd": "${workspaceFolder}/scripts",
      "console": "integratedTerminal",
      "runtimeArgs": ["-r", "ts-node/register"],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false
      }
    },
    {
      "name": "🚀 本地開發 + 功能測試",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/dev/start.ts",
      "cwd": "${workspaceFolder}/scripts",
      "console": "integratedTerminal",
      "runtimeArgs": ["-r", "ts-node/register"],
      "env": {
        "AUTO_TEST": "true"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      }
    },
    {
      "name": "📊 本機 LINE Bot 測試",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/functions/dist/index.js",
      "cwd": "${workspaceFolder}/functions",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false
      }
    },
    {
      "name": "🚀 本地開發伺服器",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/functions/dist/local-dev.js",
      "cwd": "${workspaceFolder}/functions",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development",
        "PORT": "3000"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      }
    },
    {
      "name": "🚀 部署到 Firebase",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/deploy/deploy.ts",
      "cwd": "${workspaceFolder}/scripts",
      "console": "integratedTerminal",
      "runtimeArgs": ["-r", "ts-node/register"],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      }
    }
  ]
}