{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "🧪 開發測試 (監控模式)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/functions/node_modules/.bin/jest",
      "cwd": "${workspaceFolder}/functions",
      "console": "integratedTerminal",
      "args": ["--watch", "--verbose"],
      "skipFiles": ["<node_internals>/**"],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false
      },
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "name": "🧪 測試報告 (中文化)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/functions/node_modules/.bin/ts-node",
      "cwd": "${workspaceFolder}/functions",
      "console": "integratedTerminal",
      "args": ["scripts/test/chinese-reporter.ts"],
      "skipFiles": ["<node_internals>/**"],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false
      },
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "name": "📊 覆蓋率檢查 (中文化)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/functions/node_modules/.bin/ts-node",
      "cwd": "${workspaceFolder}/functions",
      "console": "integratedTerminal",
      "args": ["scripts/test/chinese-coverage-check.ts"],
      "skipFiles": ["<node_internals>/**"],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false
      },
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "name": "🔍 快速品質檢查",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/functions/node_modules/.bin/npm",
      "cwd": "${workspaceFolder}/functions",
      "console": "integratedTerminal",
      "args": ["run", "lint"],
      "skipFiles": ["<node_internals>/**"],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false
      },
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "🔍 完整 CI 檢查",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/ci/check.ts",
      "cwd": "${workspaceFolder}/scripts",
      "console": "integratedTerminal",
      "runtimeArgs": ["-r", "ts-node/register"],
      "skipFiles": ["<node_internals>/**"],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false
      },
      "env": {
        "NODE_ENV": "development",
        "USE_MOCK_DATA": "true"
      }
    },
    {
      "name": "🚀 部署到生產環境",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/deploy/deploy.ts",
      "cwd": "${workspaceFolder}/scripts",
      "console": "integratedTerminal",
      "runtimeArgs": ["-r", "ts-node/register"],
      "skipFiles": ["<node_internals>/**"],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "env": {
        "NODE_ENV": "production",
        "USE_MOCK_DATA": "false"
      }
    }
  ]
}